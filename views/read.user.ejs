<!DOCTYPE html>
<html lang="en">
  <head>
    <meta charset="UTF-8" />
    <meta http-equiv="X-UA-Compatible" content="IE=edge" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <link
      href="https://cdn.jsdelivr.net/npm/bootstrap@5.2.0/dist/css/bootstrap.min.css"
      rel="stylesheet"
      integrity="sha384-gH2yIJqKdNHPEq0n4Mqa/HGKIhSkIHeL5AyhkYV8i59U5AR6csBvApHHNl/vI1Bx"
      crossorigin="anonymous"
    />

    <link
      rel="stylesheet"
      href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.5.2/css/all.min.css"
      integrity="sha512-SnH5WK+bZxgPHs44uWIX+LLJAJ9/2PkPKZ5QiAj6Ta86w+fsb2TkcmfRyVX3pBnMFcV7oQPJkl9QevSCWr3W6A=="
      crossorigin="anonymous"
      referrerpolicy="no-referrer"
    />
    <title>Read users</title>
  </head>
  <body>
    <div class="container mt-2">
      <h1 class="h3 text-center">All User's Data</h1>
      <a class="m-2 text-decoration-none text-dark" href="/admin-dashboard"
        >Dashboard
      </a>
      <table class="table table-bordered table-active table-striped mt-2">
        <thead>
          <tr class="text-center">
            <th scope="col">Name</th>
            <th scope="col">Email</th>
            <th scope="col">Contact</th>
            <th scope="col">Address</th>
            <th scope="col">Delete</th>
            <th scope="col">Edit</th>
          </tr>
        </thead>
        <tbody class="text-center text-dark">
          <tr>
            <% if(rows.length > 0) { %> <% rows.map((eachData) => { %>

            <td><%- eachData.name %></td>
            <td><%- eachData.email %></td>
            <td><%- eachData.contact %></td>

            <td><%- eachData.address %></td>
            <td>
              <a
                class="text-decoration-none"
                href="/delete-user?id=<%- eachData.user_id %>"
                ><i class="fa-sharp fa-solid fa-trash p-2 text-dark"></i
              ></a>
            </td>
            <td>
              <a
                class="text-decoration-none"
                href="/update-user?id=<%- eachData.user_id %>"
              >
                <i class="fa-solid fa-user-pen p-2 text-dark"></i
              ></a>
            </td>
          </tr>
          <% }) %> <%} else { %>
          <tr>
            <td colspan="6" class="fs-2 fw-bold">No user found</td>
            <% }%>
          </tr>
        </tbody>
      </table>
    </div>
  </body>
</html>
